<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ticket_row_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:lines="1"
        android:padding="@dimen/small_gap_size"
        android:text=""
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/ticket_row_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:lines="1"
        android:paddingTop="@dimen/small_gap_size"
        android:paddingBottom="@dimen/small_gap_size"
        android:text="Ã—2"
        android:textColor="@color/red_color" />
    <info.androidhive.fontawesome.FontTextView
        android:id="@+id/ticket_row_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red_color"
        android:paddingLeft="@dimen/_2sdp"
        android:paddingRight="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:text="@string/fa_minus_solid"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/accent_font_size"
        app:solid_icon="true"/>

    <TextView
        android:id="@+id/ticket_row_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:lines="1"
        android:padding="@dimen/small_gap_size"
        android:text=""
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/ticket_row_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:lines="1"
        android:padding="@dimen/small_gap_size"
        android:text=""
        android:textColor="@color/red_color" />
    <info.androidhive.fontawesome.FontTextView
        android:id="@+id/ticket_row_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_2sdp"
        android:paddingRight="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:text="@string/fa_trash_alt_solid"
        android:textColor="@color/red_color"
        android:textStyle="bold"
        android:textSize="@dimen/_17sdp"
        app:solid_icon="true"/>
</LinearLayout>