<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_list_row"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/event_list_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:padding="@dimen/small_gap_size"
        android:text=""
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/event_list_instance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:lines="3"
        android:padding="@dimen/small_gap_size"
        android:text=""
        android:textColor="@color/event_instance_color"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/event_list_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:padding="@dimen/small_gap_size"
        android:text=""
        android:textColor="@android:color/black"/>
</LinearLayout>