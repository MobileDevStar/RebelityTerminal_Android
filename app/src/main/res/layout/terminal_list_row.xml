<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_list_row"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/terminal_list_terminal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/small_gap_size"
        android:text=""
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/terminal_list_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/small_gap_size"
        android:text=""
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/terminal_list_connect"
        android:layout_width="0dp"
        android:layout_height="@dimen/terminal_connect_height"
        android:layout_weight="0.4"
        android:layout_margin="@dimen/small_gap_size"
        android:layout_gravity="center_vertical"
        android:background="@drawable/connect_button_bg"
        android:text="@string/terminal_connect"
        android:textColor="@android:color/white"/>

</LinearLayout>