<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_48sdp"
    android:layout_margin="@dimen/ticket_recycler_margin">

    <androidx.cardview.widget.CardView
        android:id="@+id/ticket_discount_card"
        xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/discount_card_color">

            <info.androidhive.fontawesome.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/s_gap_size"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="@string/fa_ticket_alt_solid"
                android:textColor="@color/discount_ticket_color"
                android:textStyle="bold"
                android:textSize="@dimen/m_font_size"
                android:rotation="-45"
                app:solid_icon="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/s_gap_size">

                <TextView
                    android:id="@+id/ticket_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount_card_name"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/ticket_card_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount_card_price"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>