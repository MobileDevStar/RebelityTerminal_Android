<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/discount_recycler_margin">

    <androidx.cardview.widget.CardView
        android:id="@+id/ticket_discount_card"
        xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/discount_card_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/mid_gap_size"
            android:paddingStart="@dimen/mid_gap_size"
            android:paddingRight="@dimen/mid_gap_size"
            android:paddingEnd="@dimen/mid_gap_size"
            android:paddingTop="@dimen/small_gap_size"
            android:paddingBottom="@dimen/small_gap_size"
            android:background="@color/discount_card_color">

            <info.androidhive.fontawesome.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_gap_size"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="@string/fa_ticket_alt_solid"
                android:textColor="@color/discount_ticket_color"
                android:textStyle="bold"
                android:textSize="@dimen/accent_font_size"
                android:rotation="-45"
                app:solid_icon="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_gap_size"
                android:layout_marginBottom="@dimen/small_gap_size"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/discount_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount_card_name"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/discount_card_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount_card_price"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>