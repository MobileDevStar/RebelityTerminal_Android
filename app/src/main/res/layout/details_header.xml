<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/black"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/s_gap_size"
    android:paddingStart="@dimen/s_gap_size"
    android:paddingRight="@dimen/s_gap_size"
    android:paddingEnd="@dimen/s_gap_size"
    android:paddingTop="@dimen/xs_gap_size"
    android:paddingBottom="@dimen/xs_gap_size">

    <LinearLayout
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/s_gap_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/logout_button_bg"
        android:onClick="onClickBack">

        <ImageView
            android:layout_width="@dimen/logout_width"
            android:layout_height="@dimen/logout_height"
            android:contentDescription="@string/app_logout_image"
            app:srcCompat="@drawable/back" />
    </LinearLayout>

    <TextView
        android:id="@+id/event_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/back_button"
        android:layout_toEndOf="@+id/back_button"
        android:layout_centerVertical="true"
        android:text="MARIETTA School School School party text dd"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/m_font_size"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:freezesText="true"/>

</RelativeLayout>