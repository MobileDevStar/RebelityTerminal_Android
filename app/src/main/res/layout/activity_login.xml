<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_marginBottom="@dimen/logo_margin_bottom"
        android:contentDescription="@string/app_logo_image"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/login_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/copyright_margin_bottom"
        android:text="@string/app_copyright"
        android:textColor="@color/logoColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_view_margin"
        android:layout_marginLeft="@dimen/login_view_margin"
        android:layout_marginEnd="@dimen/login_view_margin"
        android:layout_marginRight="@dimen/login_view_margin"
        android:paddingBottom="@dimen/login_button_height"
        android:background="@drawable/login_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/app_login_title"
            android:textColor="@color/loginTitleColor"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:paddingLeft="@dimen/login_view_margin"
            android:paddingTop="@dimen/login_view_margin"
            android:paddingRight="@dimen/login_view_margin">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/login_view_margin"
                android:background="@color/colorAccent"
                android:hint="@string/login_username_hint"
                android:autofillHints=""
                android:inputType="textPersonName"
                android:padding="@dimen/login_edit_padding"
                android:text=""
                android:textColor="@color/loginTitleColor"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/login_edit_textsize" tools:targetApi="o" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/login_view_margin"
                android:background="@color/colorAccent"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:padding="@dimen/login_edit_padding"
                android:text=""
                android:textColor="@color/loginTitleColor"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/login_edit_textsize"
                android:autofillHints="" tools:targetApi="o"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_button_height"
                android:layout_marginBottom="@dimen/login_view_margin"
                android:background="@drawable/login_button_bg"
                android:text="@string/app_login_title"
                android:textColor="@android:color/white"
                android:onClick="onClickLogin"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/login_view_margin"
                android:background="@drawable/login_validation_bg"
                android:padding="@dimen/login_edit_padding"
                android:text="@string/login_username_validate"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>