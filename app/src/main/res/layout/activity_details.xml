<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

<!--    <androidx.core.widget.NestedScrollView-->
<!--        android:id="@+id/main_body"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/app_header"
                layout="@layout/app_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/small_gap_size"
                android:paddingRight="@dimen/small_gap_size"
                android:paddingBottom="@dimen/mid_gap_size">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/mid_gap_size"
                    android:paddingBottom="@dimen/small_gap_size">

                    <info.androidhive.fontawesome.FontTextView
                        android:id="@+id/upcoming_event_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/small_gap_size"
                        android:paddingStart="@dimen/small_gap_size"
                        android:paddingRight="@dimen/small_gap_size"
                        android:paddingEnd="@dimen/small_gap_size"
                        android:text="@string/fa_ticket_alt_solid"
                        android:textColor="@color/white"
                        android:rotation="-45"
                        app:solid_icon="true"/>

                    <TextView
                        android:id="@+id/event_ticket_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MARIETTA School School School party text dd"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/accent_font_size"
                        android:singleLine="true"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print_queue_label"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/ticket_details_tablayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabGravity="fill"
                        app:tabTextColor="@color/white"
                        app:tabRippleColor="@color/white"
                        app:tabIndicatorColor="@color/white"
                        app:tabIndicatorHeight="2dp"
                        app:tabBackground="@color/colorPrimary"
                        app:tabMode="fixed">

                    </com.google.android.material.tabs.TabLayout>

                    <com.rebelity.rebelityterminal.components.WrappingViewPager
                        android:id="@+id/ticket_details_pages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.rebelity.rebelityterminal.components.WrappingViewPager>

                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/app_footer"
                layout="@layout/app_footer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/small_gap_size"
                android:layout_marginRight="@dimen/small_gap_size"/>
        </LinearLayout>
<!--    </androidx.core.widget.NestedScrollView>-->

</LinearLayout>