<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="horizontal"
    android:paddingStart="@dimen/mid_gap_size"
    android:paddingLeft="@dimen/mid_gap_size"
    android:paddingTop="@dimen/small_gap_size"
    android:paddingBottom="@dimen/small_gap_size">

    <ImageView
        android:layout_width="@dimen/main_logo_width"
        android:layout_height="@dimen/main_logo_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_logo_image"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/small_gap_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/logout_button_bg">
        <ImageView
            android:layout_width="@dimen/logout_width"
            android:layout_height="@dimen/logout_height"
            android:contentDescription="@string/app_logout_image"
            app:srcCompat="@drawable/logout" />
    </LinearLayout>

</RelativeLayout>