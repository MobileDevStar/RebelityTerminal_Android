<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/s_gap_size">

    <TextView
        android:id="@+id/guest_list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.45"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:text="@string/guests_header_name"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:gravity="center_horizontal">
        <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/xs_gap_size"
            android:layout_marginEnd="@dimen/xs_gap_size"
            android:text="@string/fa_phone_solid"
            android:textColor="@color/gray_color"
            android:textStyle="bold"
            android:textSize="@dimen/m_font_size"
            android:rotation="90"
            app:solid_icon="true"/>

        <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xs_gap_size"
            android:layout_marginStart="@dimen/xs_gap_size"
            android:text="@string/fa_envelope_solid"
            android:textColor="@color/gray_color"
            android:textStyle="bold"
            android:textSize="@dimen/m_font_size"
            app:solid_icon="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="0.35">
        <Button
            android:id="@+id/sales_button_refund"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xs_button_height"
            android:background="@drawable/warning_button_bg"
            android:paddingLeft="@dimen/s_gap_size"
            android:paddingStart="@dimen/s_gap_size"
            android:paddingRight="@dimen/s_gap_size"
            android:paddingEnd="@dimen/s_gap_size"
            android:text="@string/guest_check_in"
            android:textSize="@dimen/xs_font_size"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guest_checked_in"
                android:textColor="@color/black"/>
            <info.androidhive.fontawesome.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_gap_size"
                android:layout_marginStart="@dimen/s_gap_size"
                android:text="@string/fa_undo_alt_solid"
                android:textColor="@color/discount_ticket_color"
                android:textSize="@dimen/s_font_size"
                app:solid_icon="true"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>